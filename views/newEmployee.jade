extends layout

block content
    include ./barraNavegacion.jade
    .container
        .row
            .col-md-offset-3.col-md-6.col-md-offset-3
                .panel-heading
                    h1 Nuevo Empleado
                        .panel-body
                            form(action='',method='post')
                                div 
                                    label Nombre:
                                    input.form-control(type='text', name='nombre', id='nombre',required)
                                div
                                    label(for='apellido') Apellido:
                                    input.form-control(type='text', name='apellido', id='apellido',required)
                                div
                                    label(for='email') E-mail:
                                    input.form-control(type='email', name='email',pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" id='email',required)
                                div
                                    label(for='pass1') Password:
                                    input.form-control(type='password', name='pass1', id='pass1',required)
                                div
                                    label(for='pass2') Validar:
                                    input.form-control(type='password', name='pass2', id='pass2',data-equals='pass1',required)
                                div
                                    input.btn.btn-success.btn-block.btn-lg(type='submit', value='Save')